configure_args="-DCMAKE_BUILD_TYPE=None -DZIG_PIE=ON -DZIG_USE_LLVM_CONFIG=ON -DZIG_SHARED_LLVM=ON -DZIG_TARGET_MCPU=baseline"
make_cmd=make
# we add xml2, zstd, zlib and ncurses
# because our lld is static-only and requires those to work
